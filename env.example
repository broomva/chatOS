# Copy to .env.local and fill in values
# ─── Database ────────────────────────────────────────
DATABASE_URL="postgresql://user:pass@localhost:5432/chatos"

# ─── Auth ────────────────────────────────────────────
AUTH_SECRET=""  # openssl rand -base64 32

# Auth providers (enable at least one)
AUTH_GITHUB_ID=""
AUTH_GITHUB_SECRET=""
AUTH_GOOGLE_ID=""
AUTH_GOOGLE_SECRET=""

# ─── AI ──────────────────────────────────────────────
# Vercel AI Gateway (recommended)
AI_GATEWAY_API_KEY=""

# Or OpenRouter
# OPENROUTER_API_KEY=""

# Or direct provider keys
# OPENAI_API_KEY=""
# ANTHROPIC_API_KEY=""

# ─── Cache & Storage ─────────────────────────────────
REDIS_URL=""              # Upstash or local Redis
BLOB_READ_WRITE_TOKEN=""  # Vercel Blob

# ─── Bot (apps/bot) ─────────────────────────────────
SLACK_BOT_TOKEN=""
SLACK_SIGNING_SECRET=""

# ─── Observability (optional) ────────────────────────
# LANGFUSE_PUBLIC_KEY=""
# LANGFUSE_SECRET_KEY=""

# ─── Agent State ────────────────────────────────────
AGENT_STATE_DIR=".agent"

# ─── App ─────────────────────────────────────────────
APP_URL="http://localhost:3000"

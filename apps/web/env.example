# Copy to .env.local and fill in values

# ─── AI ──────────────────────────────────────────────
# Vercel AI Gateway (recommended)
AI_GATEWAY_API_KEY=""

# Or direct provider keys
# OPENAI_API_KEY=""
# ANTHROPIC_API_KEY=""

# ─── Database ────────────────────────────────────────
DATABASE_URL="postgresql://user:pass@localhost:5432/chatos"

# ─── Auth ────────────────────────────────────────────
AUTH_SECRET=""  # openssl rand -base64 32

# Auth providers (enable at least one)
AUTH_GITHUB_ID=""
AUTH_GITHUB_SECRET=""
# AUTH_GOOGLE_ID=""
# AUTH_GOOGLE_SECRET=""

# ─── Cache & Storage ─────────────────────────────────
REDIS_URL=""              # Upstash or local Redis (for resumable streams)
# BLOB_READ_WRITE_TOKEN=""  # Vercel Blob (for file uploads)

# ─── App ─────────────────────────────────────────────
APP_URL="http://localhost:3000"
